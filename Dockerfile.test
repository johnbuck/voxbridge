FROM python:3.11-slim

LABEL description="VoxBridge Testing Container"
LABEL maintainer="VoxBridge Team"

# Install system dependencies
RUN apt-get update && apt-get install -y \
    ffmpeg \
    git \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy dependency files first (for Docker layer caching)
COPY requirements-bot.txt requirements-test.txt ./

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements-bot.txt && \
    pip install --no-cache-dir -r requirements-test.txt

# Copy source code and tests
COPY . .

# Set Python path to find modules
ENV PYTHONPATH=/app

# Default command: run all tests with nice output
CMD ["pytest", "-v", "--tb=short", "--color=yes"]
