# Discord Bot (Python)
# Handles Discord voice operations and HTTP API

FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    ffmpeg \
    libopus0 \
    libopus-dev \
    libsodium23 \
    libsodium-dev \
    libffi-dev \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements-bot.txt ./
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements-bot.txt && \
    rm requirements-bot.txt

# Copy application code
COPY src/ ./src/

# Copy database migration files (VoxBridge 2.0)
COPY alembic.ini ./
COPY alembic/ ./alembic/

# Create non-root user
RUN adduser --disabled-password --gecos '' --uid 1001 appuser && \
    chown -R appuser:appuser /app
USER appuser

# Expose port
EXPOSE 4900

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:4900/health || exit 1

# Run Discord bot
CMD ["python", "-m", "src.discord_bot"]
